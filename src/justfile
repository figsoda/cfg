default: update

alias c := clean
clean:
    sudo vkpurge rm all
    sudo xbps-remove -Ooy

gen template name:
    sh ~/rust-templates/gen.sh ~/rust-templates/{{template}} {{name}} {{name}} '["figsoda <figsoda@pm.me>"]' figsoda/{{name}}

sv service:
    sudo ln -st /var/service/ /etc/sv/{{service}}

alias u := update
update:
    sudo xbps-install -Suy
    rustup update
    cargo install-update -a
